<div class="container">
  <div class="container row justify-content-center">
    <h6 class="text-danger">*為必填欄位</h6>
    <h3 class="ml-3">請輸入你的支出</h3>
  </div>

  <form action="/record/{{ record._id }}?_method=PUT" method="POST">
    <div class="form-group row justify-content-center">
      <label for="inputName" class="row col-sm-2 col-form-label">名稱<p class="text-danger">*</p></label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" value="{{ record.name }}">
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <label for="inputDate" class="row col-sm-2 col-form-label">日期<p class="text-danger">*</p></label>
      <div class="col-sm-10">
        <input type="date" class="form-control" name="date" value="{{ record.date }}">
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <label for="inputCategory" class="row col-sm-2 col-form-label">類別<p class="text-danger">*</p></label>
      <div class="col-sm-10">
        <select name="category">
          <option name="category" value={{record.category}}>{{record.category}}</option>
          {{#each categories}}
          <option name="category" value={{this.name}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <label for="inputAmount" class="row col-sm-2 col-form-label">金額<p class="text-danger">*</p></label>
      <div class="col-sm-10">
        <input type="number" class="form-control" name="amount" value="{{ record.amount }}">
      </div>
    </div>
    <div class="container row justify-content-center">
      <button class="btn btn-success" type="submit">新增</button>
      <a class="btn btn-primary ml-3" href="/" role="button">返回</a>
    </div>

  </form>
</div>