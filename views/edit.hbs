<div class="container">
  <div class="container row">
    <h6>*為必填欄位</h6>
    <h3>請修改你的支出</h3>
  </div>

  <form action="/record/{{ record._id }}?_method=PUT" method="POST">
    <div class="form-group row">
      <label for="inputName" class="col-sm-2 col-form-label">名稱* :</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" value="{{ record.name }}">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputDate" class="col-sm-2 col-form-label">日期* :</label>
      <div class="col-sm-10">
        <input type="date" class="form-control" name="date" value="{{ record.date }}">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputCategory" class="col-sm-2 col-form-label">類別* :</label>
      <div class="col-sm-10">
        <select name="category">
          <option name="category" value={{record.category}}>{{record.category}}</option>
          {{#each categories}}
          <option name="category" value={{this.name}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputAmount" class="col-sm-2 col-form-label">金額* :</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" name="amount" value="{{ record.amount }}">
      </div>
    </div>
    <div class="form-group row">
      <button class="btn btn-success" type="submit">修改</button>
      <a class="btn btn-primary" href="/" role="button">返回</a>
    </div>

  </form>
</div>