<div class="container">
  <div class="container row">
    <h6>*為必填欄位</h6>
    <h3>請輸入你的支出</h3>
  </div>
  
  <form action="/expense" method="POST">
    <div class="form-group row">
      <label for="inputName" class="col-sm-2 col-form-label">名稱* :</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="inputName">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputDate" class="col-sm-2 col-form-label">日期* :</label>
      <div class="col-sm-10">
        <input type="date" class="form-control" name="inputDate">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputCategory" class="col-sm-2 col-form-label">類別* :</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="inputCategory">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputAmount" class="col-sm-2 col-form-label">金額* :</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" name="inputAmount">
      </div>
    </div>
    <div class="form-group row">
      <button class="btn btn-success" type="submit">新增</button>
      <a class="btn btn-primary" href="/" role="button">返回</a>
    </div>
    
  </form>
</div>