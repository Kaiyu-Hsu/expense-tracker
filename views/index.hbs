{{!-- 類別下拉 --}}
<div class="container">
  <div>
    <form action="/filter" method="POST">
    <label for="category">類別</label>
    <select name="filterCategory" id="filterCategory" onchange="form.submit()">
      <option disabled selected value="">請下拉</option>

      {{#each categories}}
      <option name="{{ this.name }}" value="{{ this.name }}">{{ this.name }}</option>
      {{/each}}
    </select>
    </form>
  </div>
</div>

{{!-- 顯示總金額 --}}
<div class="container row">
  <div>總金額:&nbsp;</div>
  <h5>NTD&nbsp;{{totalAmount}}</h5>
</div>

<div class="container">
  <ul class="list-group">
    {{#each records}}

    <li class="list-group-item">
      <div class="row">
        {{{this.category}}}
        <h4>{{ this.name }}</h4>
        <h4>{{this.date}}</h4>
        <h4>金額:{{this.amount}}</h4>
        <div class="col-auto ">
          <a class="btn btn-primary" href="/record/{{ this._id }}/edit" role="button">修改</a>
          <form action="/record/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-outline-danger" type="submit">刪除</button>
          </form>
        </div>
      </div>
    </li>

    {{/each}}
  </ul>
  </div>

<div class="container row my-5 ">
  <div>
    <a class="btn btn-primary" href="/record/new" role="button">新增支出</a>
  </div>
  <div class="ml-2">
    <a class="btn btn-primary" href="/" role="button">全部清單</a>
  </div>
</div>